                                <ImageView
                                    android:layout_width="16sp"
                                    android:layout_height="16sp"
                                    android:src="@drawable/plus"
                                    android:layout_gravity="center"
                                    app:tint="@color/white" />

                            </androidx.cardview.widget.CardView>


<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:id="@+id/drawLayout"
    tools:context=".CheckOutActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/toogle"
                android:layout_width="28sp"
                android:layout_height="28sp"
                app:tint="#FDBB30"
                android:backgroundTint="@color/white"
                android:src="@drawable/menus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/acme"
                android:text="Pizza Oven"
                android:textColor="#FDBB30"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28sp"
                    android:layout_height="28sp"
                    app:tint="#FDBB30"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="@color/white"
                    android:layout_marginEnd="8sp"
                    android:src="@drawable/search" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true">

                    <androidx.cardview.widget.CardView
                        android:layout_width="18sp"
                        android:layout_height="18sp"
                        app:cardCornerRadius="50sp"
                        app:cardBackgroundColor="#FDBB30"
                        app:cardElevation="0sp">

                        <TextView
                            android:id="@+id/cartQuan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:text="0" />

                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/bag"
                        android:layout_width="28sp"
                        android:layout_height="28sp"
                        app:tint="#FDBB30"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/shopping_bag" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:padding="10sp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Sr#"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="1sp"
                android:layout_height="20sp"
                android:layout_margin="6sp"
                android:gravity="center_vertical"
                android:background="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Name"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="1sp"
                android:layout_height="20sp"
                android:layout_margin="6sp"
                android:gravity="center_vertical"
                android:background="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Qt"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="1sp"
                android:layout_height="20sp"
                android:layout_margin="6sp"
                android:gravity="center_vertical"
                android:background="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Price"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:listitem="@layout/cart_item"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bevragLayout"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="28sp"
                android:layout_margin="12sp"
                app:cardElevation="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="12sp"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="15sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="18sp"
                        android:layout_marginStart="2sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/acme"
                        android:textColor="#FDBB30"
                        android:textStyle="bold"
                        android:text="Total Price:" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:fontFamily="@font/acme"
                        android:layout_gravity="center"
                        android:layout_marginStart="12sp"
                        android:textColor="#FDBB30"
                        android:textStyle="bold"
                        android:text="$" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="18sp"
                        android:layout_marginStart="2sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/acme"
                        android:textColor="#FDBB30"
                        android:textStyle="bold"
                        android:text="9.99" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/buy"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_margin="12sp"
                android:layout_weight="1"
                android:backgroundTint="#FDBB30"
                android:textColor="@color/white"
                android:text="Place Order" />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/navView"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>